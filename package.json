{
    "name": "amoscato-client",
    "license": "MIT",
    "version": "0.1.0",
    "description": "Front end client for amoscato.com",
    "private": true,
    "scripts": {
        "start": "concurrently --raw \"npm:start:*\"",
        "start:hugo": "hugo serve",
        "start:ts": "tsc --noEmit --watch",
        "build": "hugo --gc --minify",
        "test": "jest",
        "posttest": "npm run lint-js && npm run prettier && npm run lint-sass",
        "lint-js": "tsc --noEmit && eslint . --ext .js,.ts",
        "lint-sass": "stylelint \"assets/**/*.scss\"",
        "prettier": "prettier --check ."
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/namoscato/amoscato-client.git"
    },
    "dependencies": {
        "jquery": "^3.6.0",
        "moment": "^2.29.2",
        "onecolor": "^3.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-typescript": "^7.17.12",
        "@types/jest": "^28.1.1",
        "@types/jquery": "^3.5.14",
        "@types/moment": "^2.13.0",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "babel-jest": "^28.1.1",
        "babel-loader": "^8.2.5",
        "concurrently": "^7.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^28.1.1",
        "prettier": "2.6.2",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-sass-guidelines": "^8.0.0",
        "typescript": "^4.5.4"
    },
    "engines": {
        "node": ">=14"
    }
}
