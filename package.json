{
    "name": "amoscato-client",
    "license": "MIT",
    "version": "0.1.0",
    "description": "Front end client for amoscato.com",
    "private": true,
    "scripts": {
        "start": "concurrently --raw \"npm:start:*\"",
        "start:hugo": "hugo serve",
        "start:ts": "tsc --noEmit --watch",
        "build": "hugo --gc --minify",
        "test": "jest",
        "posttest": "npm run lint-js && npm run prettier && npm run lint-sass",
        "lint-js": "tsc --noEmit && eslint . --ext .js,.ts",
        "lint-sass": "stylelint \"assets/**/*.scss\"",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write ."
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/namoscato/amoscato-client.git"
    },
    "dependencies": {
        "jquery": "^3.7.1",
        "moment": "^2.30.1",
        "onecolor": "^4.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-typescript": "^7.24.7",
        "@types/jest": "^29.5.12",
        "@types/jquery": "^3.5.30",
        "@typescript-eslint/eslint-plugin": "^8.12.2",
        "@typescript-eslint/parser": "^8.12.2",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.1.3",
        "concurrently": "^8.2.2",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "jest": "^29.7.0",
        "prettier": "3.3.3",
        "stylelint": "^16.9.0",
        "stylelint-config-sass-guidelines": "^12.0.0",
        "typescript": "^5.6.3"
    },
    "engines": {
        "node": "20.x"
    }
}
